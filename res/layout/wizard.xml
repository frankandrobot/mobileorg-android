<?xml version="1.0" encoding="utf-8"?>
<com.matburt.mobileorg.Settings.PageFlipView
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/wizard_parent"
   android:layout_width="wrap_content" 
   android:layout_height="fill_parent"
   android:fillViewport="true"
   android:layout_alignParentTop="true">  
  <com.matburt.mobileorg.Settings.WideLinearLayout
     android:id="@+id/wizard_container"
     android:layout_width="wrap_content"
     android:layout_height="fill_parent"
     android:orientation="horizontal">
    <com.matburt.mobileorg.Settings.PageView
       android:id="@+id/wizard_page1"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">
      <include 
	  android:layout_alignParentTop="true"
	  android:id="@+id/wizard_page1_content" 
	  layout="@layout/wizard_page1" />
      <include 
	  android:layout_below="@+id/wizard_page_1_content"
	  layout="@layout/wizard_next_button" />
    </com.matburt.mobileorg.Settings.PageView>
    <com.matburt.mobileorg.Settings.PageView
       android:id="@+id/wizard_page2"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">
      <include 
	  android:layout_alignParentTop="true"
	  android:id="@+id/wizard_page2_content" 
	  layout="@layout/wizard_page1" />
      <include 
	  android:layout_below="@+id/wizard_page_2_content"
	  layout="@layout/wizard_previous_button" />
      <include 
	  android:layout_below="@+id/wizard_page_2_content"
	  layout="@layout/wizard_next_button" />
    </com.matburt.mobileorg.Settings.PageView>
    <com.matburt.mobileorg.Settings.PageView
       android:id="@+id/wizard_page3"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">
      <TextView	
	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content"
	 android:text="Page 3" />
      <include layout="@layout/wizard_previous_button" />
      <include layout="@layout/wizard_next_button" />
    </com.matburt.mobileorg.Settings.PageView>
  </com.matburt.mobileorg.Settings.WideLinearLayout>
</com.matburt.mobileorg.Settings.PageFlipView>
